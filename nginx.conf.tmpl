
#user  nobody;
worker_processes  1;

# This default error log path is compiled-in to make sure configuration parsing
# errors are logged somewhere, especially during unattended boot when stderr
# isn't normally logged anywhere. This path will be touched on every nginx
# start regardless of error log location configured here. See
# https://trac.nginx.org/nginx/ticket/147 for more info. 
#
#error_log  /var/log/nginx/error.log;
#

#pid        logs/nginx.pid;


events {
    worker_connections  1024;
}


http {
    include       mime.types;
    default_type  application/octet-stream;
    #access_log  logs/access.log  main;
    sendfile        on;
    #tcp_nopush     on;
    #keepalive_timeout  0;
    keepalive_timeout  65;
    #gzip  on;
    server {
        listen	81;
        root /usr/local/www/satis/hsts;
        autoindex on;
        index  index.html index.htm;
        #add_header Strict-Transport-Security "max-age=120;";
    }

    server {
        listen       80;
        root   /usr/local/www/satis;
        autoindex on;
        index  index.html index.htm;
        ############################################################
        # BEGIN satis header testing stuff
        ############################################################
        add_header X-Alliuminate M4_SATIS_SIG;
        location /good.html {
            add_header X-Alliuminate M4_SATIS_SIG;
        }
        location /badtime.html {
            add_header X-Alliuminate M4_SATIS_SIG_BAD_TIME;
        }
        location /badfp.html {
            add_header X-Alliuminate M4_SATIS_SIG_BAD_FP;
        }
        location /baddomain.html {
            add_header X-Alliuminate M4_SATIS_SIG_BAD_DOMAIN;
        }
        location /badsignature.html {
            add_header X-Alliuminate M4_SATIS_SIG_BAD_SIG;
        }
        ############################################################
        # END satis header testing stuff
        ############################################################

        #access_log  logs/host.access.log  main;
        #error_page  404              /404.html;
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   /usr/local/www/nginx-dist;
        }
    }
}
